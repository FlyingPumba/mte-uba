<%- model_class = Proveedor -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>

<% content_for(:title, Proveedor.model_name.human.titlecase) %>

<% content_for(:breadcrumbs) do %>
  <%= breadcrumbs do |b|
    b.item Proveedor.model_name.human, proveedores_path
    b.item @proveedor.nombre, root_path, :active => true
  end %>
<%end%>

<%= render 'datos_proveedor' %>

<%= render 'shared/direcciones', :obj_to_show => @proveedor  %>


<%= link_to t('.back', :default => t("helpers.links.back")),
              proveedores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proveedor_path(@proveedor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proveedor_path(@proveedor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
