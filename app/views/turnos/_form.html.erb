<%= semantic_form_for @turno, :html => { :class => "form-horizontal unidad" } do |f| %>
  <%#= f.semantic_errors %>
  <%= render 'shared/error_handler', :obj_errors => @turno.errors %>

  <%#= render('shared/common_form_buttons') %>

  <%= f.inputs(:class => :column_left ) do %>
    <%= f.input :descripcion, :input_html => { :class => 'form-control' } %>
  <% end %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                turnos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
