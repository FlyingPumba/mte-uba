<%= semantic_form_for @nota_pedido, :html => { :class => "form-horizontal nota_pedido" } do |f| %>

  <%= render 'shared/error_handler', :obj_errors => @nota_pedido.errors %>

  <div class="form-group">
    <%= f.label :numeroserie, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :numeroserie,disabled:true, :class => 'form-control' %>
      <script type="text/javascript">
      // script to disable numeroserie field, since it's autopopulated from the controller
      $('#nota_pedido_numeroserie').attr('readonly', 'true');
      </script>
    </div>
    <%=f.error_span(:numeroserie) %>
  </div>

  <div class="form-group">
    <%= f.label :fecha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fecha, :class => 'datepicker' %>
    </div>
    <%=f.error_span(:fecha) %>
  </div>

  <%= render('shared/items_detalle', :f => f)%>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                nota_pedidos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
