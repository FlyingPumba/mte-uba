<p id="notice"><%= notice %></p>

<h1>Listing Tallers</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tallers.each do |taller| %>
      <tr>
        <td><%= taller.nombre %></td>
        <td><%= link_to 'Show', taller %></td>
        <td><%= link_to 'Edit', edit_taller_path(taller) %></td>
        <td><%= link_to 'Destroy', taller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Taller', new_taller_path %>
