<%= form_for @membership, :html => { :class => "form-horizontal membership" } do |f| %>

  <% if @membership.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @membership.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :role_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :role_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:role_id) %>
  </div>
  <div class="form-group">
    <%= f.label :taller_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :taller_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:taller_id) %>
  </div>
  <div class="form-group">
    <%= f.label :usuario_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :usuario_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:usuario_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                memberships_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
