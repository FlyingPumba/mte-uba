<%= semantic_form_for @nota_reparacion, :html => { :class => "form-horizontal nota_reparacion" } do |f| %>

  <% if @nota_reparacion.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@nota_reparacion.errors.count, "error") %> prohibited this nota_reparacion from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @nota_reparacion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :numeroserie, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :numeroserie, :class => 'form-control' %>
      <script type="text/javascript">
      // script to disable numeroserie field, since it's autopopulated from the controller
      $('#nota_reparacion_numeroserie').attr('readonly', 'true');
      </script>
    </div>
    <%=f.error_span(:numeroserie) %>
  </div>

  <div class="form-group">
    <%= f.label :fecha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :fecha, :class => 'datepicker' %>
    </div>
    <%=f.error_span(:fecha) %>
  </div>

  <% if !@nota_reparacion.new_record? %>
    <div class="form-group">
      <%= f.label :remito, :class => 'control-label col-lg-2' %>
      <div class="col-lg-2">
        <%= f.text_field :remito, :class => 'form-control' %>
      </div>
      <%=f.error_span(:remito) %>
    </div>
  <% end %>

  <%= render('shared/items_detalle', :f => f)%>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                nota_reparaciones_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
