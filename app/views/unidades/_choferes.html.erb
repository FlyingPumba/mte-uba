<div class="panel panel-default">
    <div style="min-height: 50px;" class="panel-heading">Choferes asignados
    </div>
    <div class="panel-content">
    <center>
        </br>
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:nombre) %></th>
              <th><%= model_class.human_attribute_name(:apellido) %></th>
              <th><%= model_class.human_attribute_name(:radio) %></th>
              <th><%= model_class.human_attribute_name(:turno) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @choferes.each do |chofer| %>
              <tr>
                <td><%=link_to chofer.nombre, [chofer] %></td>
                <td><%= chofer.apellido %></td>
                <td><%= chofer.radio %></td>
                <td><%= chofer.turnos_unidad_string(@unidad) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate(@choferes) %>
        </center>
    </div>
</div>
